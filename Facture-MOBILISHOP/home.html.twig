<!DOCTYPE html>
<html lang="en">
    <head>
        {% block meta %}
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1.0,user-scalable=0">
        {% endblock %}
        
        {% block graph %}{% endblock %}
        {% block stylesheets %}
        <link href="style/style.css" type="text/css" rel="stylesheet" />
        {% endblock %}
    </head>
   <body>
        {% block body %}
            <div class="header-page">
                <section class="top">
                    <div class="logo">
                        <img src="style/img/logo.png" alt="">
                        <div class="tournament">
                            <span class="uf">universal football</span>
                            <br>
                            <span class="t">tournament</span>
                            <p>+ 33 7 61 04 85 75</p>
                        </div>
                    </div>
                    <div class="facture-info">
                        <div class="fac-top1">
                            <p>Numéro de facture</p>
                            <p>Date d'émission</p>
                            <p>Date d'échéance</p>
                        </div>
                        <div class="fac-top2">
                            <span class="top2">FACTURE</span>
                            <br>
                            <p>UFT-001</p>
                            <p>{{invoice_number}}</p>
                            <p>{{invoice_paid_at}}</p>
                        </div>
                    </div> 
                </section>
            </div>
            <table>
                <thead>
                    <tr>
                        <td>
                            <div class="page-header-space"></div>
                        </td>
                    </tr> 
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <div class="container">
                                <div class="adr-facture">
                                    <p>Facturer à</p>
                                    <span>{{address}}</span>
                                </div>
                                <div class="tab-facture">
                                    <span class="titre">{{invoice_total}} dû le {{invoice_paid_at}}</span>
                                    <br>
                                    <table class="table-style">
                                        <thead>
                                            <tr>
                                                <th class="description-head">Description</th>
                                                <th class="quantity-head">Qté</th>
                                                <th class="unitprice-head">Prix unitaire</th>
                                                <th class="taxe-head">Taxe</th>
                                                <th class="amount-head">Montant</th>
                                            <tr>
                                        </thead>
                                        <tbody>
                                            {% for line in lines %}
                                                <tr>
                                                    <td class="description-body">{{ line.line_description }}</td>
                                                    <td class="quantity-body">{{ line.line_quantity }}</td>
                                                    <td class="unitprice-body">{{line.line_amount}}</td>
                                                    <td class="taxe-body"> 20 % incl </td>
                                                    <td class="amount-body">{{invoice_total}}</td>
                                                </tr>  
                                            {% endfor %}                                                                     
                                        <tbody>
                                    <table>
                                </div>
                                <table class="subtotal-table">
                                    <thead>
                                        <tr class="subtotal-line">
                                            <th class="subtotal-title">Sous-total</th>
                                            <th class="subtotal-value">{{invoice_total}}</th>
                                        </tr>  
                                    </thead>
                                    <tbody>
                                        <tr class="tva-line">
                                            <td class="tva-title">TVA - France (20 %, incl.)</td>
                                            <td class="tva-value">16,67 </td>
                                        </tr>
                                        <tr class="amount-line">
                                            <td class="final-amount-title">Montant dû</td>
                                            <td class="final-amount-value">{{invoice_total}}</td>
                                        </tr>
                                    </tbody>
                                </table>
                                <br>
                                <br>
                                <div class="UFT-adresse">
                                    <p>UFT SAS - Capital de 1000€</p>
                                    <p>2 Avenue du Chaperon Vert, 94250 Gentilly</p>
                                    <p>N° Siret 888 131 406 R.C.S. Créteil - N° TVA FR73888131406</p>
                                </div>
                                <br>
                                <br>
                                <br>
                            </div>
                        </td>
                    </tr>
                </tbody>
                <tfoot>
                    <tr>
                    <td>
                        <div class="page-footer-space"></div>
                    </td>
                    </tr>
                </tfoot>
            </table>
            <div class="footer-page">
                <hr>
                <div class="foot">
                    <p>UFT-0809</p>
                    <span>Page 1/3</span>
                </div>
            </div> 
        {% endblock %}    
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </body>
</html>
